<?xml version="1.0"?>
<info xmlns:xsi= "http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="https://apps.nextcloud.com/schema/apps/info.xsd">
    <id>souvenirs</id>
    <name>Souvenirs</name>
    <summary>Display "souvenirs" albums in nextcloud web interface</summary>
    <description><![CDATA[View and share albums made by the [Souvenirs android application](https://github.com/zorgluf/souvenirs-android)]]></description>
    <version>1.6.1</version>
    <licence>agpl</licence>
    <author mail="zorgluf@gmail.com">Francois Valley</author>
    <namespace>Souvenirs</namespace>
    <category>multimedia</category>
    <website>https://github.com/zorgluf/souvenirs-nextcloud</website>
    <bugs>https://github.com/zorgluf/souvenirs-nextcloud/issues</bugs>
    <repository>https://github.com/zorgluf/souvenirs-nextcloud</repository>
    <screenshot small-thumbnail="https://raw.githubusercontent.com/zorgluf/souvenirs-nextcloud/main/metadata/en-US/images/1-small.png">https://raw.githubusercontent.com/zorgluf/souvenirs-nextcloud/main/metadata/en-US/images/1.png</screenshot>
    <screenshot>https://raw.githubusercontent.com/zorgluf/souvenirs-nextcloud/main/metadata/en-US/images/2.png</screenshot>
    <dependencies>
        <nextcloud min-version="19" max-version="24"/>
    </dependencies>
    <navigations>
        <navigation>
            <name>Souvenirs</name>
            <route>souvenirs.page.index</route>
        </navigation>
    </navigations>
    <settings>
        <personal>OCA\Souvenirs\Settings\AdminSettings</personal>
        <personal-section>OCA\Souvenirs\Settings\AdminSection</personal-section>
    </settings>
</info>
